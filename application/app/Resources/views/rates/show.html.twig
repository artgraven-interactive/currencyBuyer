{% extends 'base.html.twig' %}

{% block body %}
    <h1>Rate</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rate.id }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ rate.currency }}</td>
            </tr>
            <tr>
                <th>Surcharge</th>
                <td>{{ rate.surcharge }}</td>
            </tr>
            <tr>
                <th>Exchange</th>
                <td>{{ rate.exchange }}</td>
            </tr>
            <tr>
                <th>Checkdate</th>
                <td>{% if rate.checkDate %}{{ rate.checkDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Notify</th>
                <td>{% if rate.notify %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ rate.discount }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('rates_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('rates_edit', { 'id': rate.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

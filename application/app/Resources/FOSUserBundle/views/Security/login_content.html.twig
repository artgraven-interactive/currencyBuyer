{% trans_default_domain 'FOSUserBundle' %}
  <style>
            .login__block{
                min-width: 330px !important;
            }
        </style>
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<!-- Login -->
            <div class="login__block active" id="l-login">
                <div class="login__block__header">
                    <i class="zmdi zmdi-account-circle"></i>
                    Hi there! Please Sign in

                    <div class="actions actions--inverse login__block__actions">
                        <div class="dropdown">
                            <i data-toggle="dropdown" class="zmdi zmdi-more-vert actions__item"></i>

                            <div class="dropdown-menu dropdown-menu-right">
                               
                                <a class="dropdown-item"  href="/resetting/request">Forgot password?</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="login__block__body">
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <div class="form-group">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control text-center" required="required"  placeholder="Email Address">
                        
                    </div>

                    <div class="form-group">
                        <input type="password" id="password" name="_password" required="required" class="form-control text-center" placeholder="Password">
                    </div>

                        <div class="form-group">
                            <input type="checkbox" id="remember_me" class="form-control text-center" name="_remember_me" value="on" />
                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                     
                    </div>
                        
                            <input type="submit" id="_submit" name="_submit"  value=">"  class="zmdi zmdi-long-arrow-right btn btn--icon login__block__btn">
                </div>

</form>
